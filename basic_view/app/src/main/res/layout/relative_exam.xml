<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="#0090FF"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FF40"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFC800"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#B300FF"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FF0048"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#001AFF"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF00DD"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/yellowtxt"
            android:layout_width="128dp"
            android:layout_height="119dp"
            android:layout_centerInParent="true"
            android:background="#EEFF00" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00BCD4"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/yellowtxt"
            />
    </RelativeLayout>
</RelativeLayout>

